DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/mitko
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# Bot mode: "webhook" or "polling" (default: polling)
TELEGRAM_MODE=polling

# Webhook settings (only needed for webhook mode)
TELEGRAM_WEBHOOK_SECRET=your_webhook_secret_here
TELEGRAM_WEBHOOK_URL=https://your-domain.com/webhook/your_secret

# Admin group: private Telegram group for admin commands and logs (required)
# Add the bot as admin to the group, then set the group's chat ID here
# See here to get the group ID: https://gist.github.com/mraaroncruz/e76d19f7d61d59419002db54030ebe35
# Note that the group ID must ALWAYS start with -100 (e.g. -1001234567890)
ADMIN_GROUP_ID=-100your_group_id_here

# LLM Configuration
# OPENAI_API_KEY is ALWAYS required (used for embeddings even with Anthropic)
LLM_PROVIDER=openai
OPENAI_API_KEY=your_openai_api_key_here

# Use OpenAI Responses API instead of Chat Completions (requires LLM_PROVIDER=openai)
# Benefits: 24h prompt caching (vs 5-10min), server-side conversation state
USE_OPENAI_RESPONSES_API=false

# Use hardcoded template with raw rationale for match notifications
# When false (default): personalized intros via ChatAgent
# When true: legacy L.matching.FOUND template with raw qualification rationale
USE_HARDCODED_MATCH_INTROS=false

# Only needed if LLM_PROVIDER=anthropic
ANTHROPIC_API_KEY=your_anthropic_api_key_here
# Matching settings
MATCHING_INTERVAL_MINUTES=30
SIMILARITY_THRESHOLD=0.7
MAX_MATCHES_PER_PROFILE=5

# Generation queue settings (budget control)
WEEKLY_BUDGET_USD=6.0

# Language: "en" or "ru"
MITKO_LANGUAGE=en

# Repository URL (used in jailbreak responses)
MITKO_REPO_URL=https://github.com/vzakharov/mitko

